import time
print("Ya debes saber lo que es tipo de datos en Python")
print("¡Practiquemos con el juego del ahorcado! Se te dara una situación y tu debes poner tu respuesta")
print("Debes poner que clase de variable debes usar: integer (int), float (float), boolean (bool) o string (str).")
print("Como respuesta escribir lo que se encuentra entre paréntesis.")
time.sleep(2)
palabra1 = "float"
palabraingresada1 = ""
vidas = 3

print("Si se quiere digitalizar el valor de pi en Python, ¿cuál es la variable a emplear?")
while vidas > 0:
 fallas = 0
 for letra in palabra1:
   if letra in palabraingresada1:
     print(letra,end="")
   else:
     print("*", end="")
     fallas+=1
 if fallas==0:
     print("¡Felicidades! ¡Has aprendido lo básico para programar en Python!")
     print("Ahora continuemos con el siguiente tema")
     break
 tuletra=str(input("Introduce una letra: "))
 palabraingresada1+=tuletra

 if tuletra not in palabra1:
     vidas-=1
     print("¡No!, sigue intentando ;)")
     print("Te quedan ", +vidas," vidas.")
     if vidas==0:
        print("Lo siento amigo, no lograste lo esperado. ¡Sigue adelante!")
else:
    print("Continuemos con lo aprendido en Python")



print()
