def problemaif1():
    print("Si quisieramos hacer un código que nos indique si una variable es mayor o menor que 100, ¿qué tipo de funcion predeterminada deberíamos usar?")
    print("Escoge entre: if, for, while")
    respuesta=input()

    if respuesta == "if":
        print("¡Correcto!")
        print()
    else:
        print("No, pero casi. Te daré una pista: el programa que deseas hacer se basa en una condición...")
        print("Entonces...")
        print()
        problemaif1()

def problemaif2():
    print("¿Cuántas funciones de else se pueden ejecutar como máximo en una misma instrucción? ")
    print("Escoge entre: 0, 1, 2 o 3")
    respuesta=input()
    if respuesta=="1":
        print("¡Correcto!")
        print("")
    else:
        print("No, pero estas cerca. Ten en cuenta que else se aplica solo cuando ninguna condición se ha cumplido...")
        print("Entonces...")
        print()
        problemaif2()

def problemaif3():
    print("¿Si quisiera usar más de una condición en un programa que función utilizamos:")
    print("Escoge entre: if, elif, else o no existe")
    respuesta=input()
    if respuesta=="elif":
        print("Correcto")
    else:
        print("Incorrecto. Una pista: la función se denota a una fusión de las variables if y else... ")
        print("Entonces...")
        print()
        problemaif3()

def problemawhilefor1():
    print("¿Cuál de las siguientes estructuras es una repetitiva?:")
    print("Escoger entre: if, str, while y print")
    respuesta=input()
    if respuesta=="while":
        print("¡Muy bien!")
        print()
    else:
        print("No le atinaste. Ten en cuenta que una estructura repetitiva debe obedecer cierta condición.")
        print("Mientras esa condición se cumpla las funciones dentro de estas estructuras repetitivas correrán.")
        print("¡Ahora inténtalo de nuevo!")
        print()
        problemawhilefor1()

def problemawhilefor2():
    print("x=int(input())")
    print("k=1")
    print("while k<x:")
    print("     print('Hola mundo')")
    print("     k+1")
    print("Si se ingresa 4 como valor de x")
    print()
    print("¿El programa imprimirá 4 veces 'Hola mundo'?")
    print("¿Qué crees? si o no")
    respuesta=input()
    if respuesta=="no":
        print("¡Correcto!")
    else:
        print("Incorrecto, te recomiendo que revises tu condición; específicamente tu signo, para que se imprima 4, el símbolo debería ser menor o menor igual.")
        print("Entonces...")
        print()
        problemawhilefor2()

def problemawhilefor3():
    print("A continuación verás un código en Python.")
    print()
    print("for i in range (1,10,2)")
    print("     print(i)")
    print()
    print("¿El print del programa mostrará '2, 4, 6, 8, 10' ?")
    print("Escoge entre: si o no ")
    respuesta=input()
    if respuesta=="no":
        print("¡Correcto!")
    else:
        print("Incorrecto. Recuerda que el primer número dentro del rango representa el inicio, el segundo representa el final y el tercero representa el intervalo entre esos números")
        print("Sabiendo esto, entonces..")
        print("")
        problemawhilefor3()

