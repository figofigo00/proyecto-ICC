def problemawhilefor1():
   print("¿Cuál de las siguientes estructuras es una repetitiva para ti?:")
   print("Escoger entre: if, str, while y print")
   respuesta=input()
   if respuesta=="while":
       print("¡Muy bien!")
       print()
   else:
       print("No le atinaste. Ten en cuenta que una estructura repetitiva debe obedecer cierta condición.")
       print("Mientras esa condición se cumpla las funciones dentro de estas estructuras repetitivas correrán.")
       print("¡Ahora inténtalo de nuevo!")
       print()
       problemawhilefor1()

def problemawhilefor2():
   print("x=int(input())")
   print("k=1")
   print("while k<x:")
   print("     print('Hola mundo')")
   print("     k+1")
   print("Si se ingresa 4 como valor de x")
   print()
   print("¿El programa imprimirá 4 veces 'Hola mundo'?")
   print("¿Qué crees? si o no")
   respuesta=input()
   if respuesta=="no":
       print("¡Correcto!")
   else:
       print("Incorrecto, te recomiendo que revises tu condición; específicamente tu signo, para que se imprima 4, el símbolo debería ser menor o menor igual.")
       print("Entonces...")
       print()
       problemawhilefor2()

