def problemaif5():
    import time
    print("Ahora analicemos la función de elif.")
    print("**********")
    print("Repasemos algo de teoría primero. Un bloque anidado con elif se vería así…")
    time.sleep(1)
    print("if condición_1:")
    print("___bloque 1)")
    print("elif condición_2:")
    print("___bloque 2)")
    print("else:")
    print("___bloque 3)")
    print("Es decir, si se cumple la condición 1 se ejecuta el bloque 1:")
    print("Si no se cumple la condición 1, pero si la 2, se ejecuta el bloque 2)")
    print("Si no se cumple ninguna de las dos, se ejecuta el bloque 3.)")
    print("")
    time.sleep(2)
    print("¿Para qué crees que sirva el siguiente programa?. Lee y pon si concuerdas escribiendo Si o No.: ")
    print("edad = int(input(¿Cuántos años tienes? ")
    print("if edad<0:")
    print("___print(''No se puede tener una edad negativa'')")
    print("elif edad>=0 and edad<18:")
    print("___print(''Es usted menor de edad'')")
    print("else:")
    print("___print(''Es usted mayor de edad'')")
    print("")
    print("¿Si se cumple el bloque 2, significa que la edad ingresada es SOLO mayor a 0?")
    respuestaif = str(input())
    if respuesta1 == "No." or "No" or "no":
        print("¡Correcto!, como veras, si se ingresa un número mayor a 0, que se encuentra antes que el 18,")
        print("quiere decir que la edad ingresada se encuentra en el rango de 0 a 18.")
    else:
        print("Vuelve a analizar la estructura.")

